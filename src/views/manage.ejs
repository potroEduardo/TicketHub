<!DOCTYPE html>
<html lang="en">

<head>
  <title>Admin Evento - Ticket Hub</title>
  <%- include partials/html-head %>
</head>

<body class="home-page">
  <%- include partials/navbar %>

    <!-- Begin page content -->
    <main class="container manage">
      <header class="title mt-3 mb-0">Editar Eventos</header>
      <form action="/manage-events" class="form-inline mb-3">
        <label for="filter-events">Filtro</label>
        <select name="filter_type" class="form-control custom-select ml-0 ml-sm-2" id="filter-events" data-selected="<%= filter_type %>">
          <option value="all">Todos los eventos</option>
          <option value="past">Eventos pasados</option>
          <option value="upcoming">Eventos futuros</option>
        </select>
      </form>
      <%- include partials/event-edit-cards %>
        <!-- Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="deleteLabel">Eliminar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                Â¿Estas seguro que deseas eliminarlo?
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-danger delete">Eliminar</button>
                <button type="button" class="btn btn-secondary ml-auto" data-dismiss="modal">Cancelar</button>
              </div>
            </div>
          </div>
        </div>
        <!-- Display list of cards -->

    </main>

    <!-- Sticky Footer -->
    <%- include partials/footer %>

      <!-- Bootstrap core JavaScript
    ================================================== -->
      <!-- Placed at the end of the document so the pages load faster -->
      <%- include partials/html-scripts %>
        <script src="/assets/delete-event.js"></script>
        <script>
          $('select').val($('select').data('selected'));
          $('select').change(() => {
            $('form').get(1).submit();
          });
        </script>
</body>

</html>